{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "prettier"
  ],
  "plugins": [
    "simple-import-sort"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "import/extensions": 0,
    "import/no-unresolved": 0
  },
  "overrides": [
    {
      "files": [
        "**/rollup.config.js"
      ],
      "rules": {
        "import/no-extraneous-dependencies": 0
      }
    }
  ]
}